# Specify the provider (in this case, AWS)
provider "aws" {
  region = "us-west-2"  # Specify your desired AWS region
}

# Create an AWS ELB
resource "aws_elb" "example_elb" {
  name               = "example-elb"
  availability_zones = ["us-west-2a", "us-west-2b", "us-west-2c"]

  # Define the listener configuration
  listener {
    instance_port     = 80
    instance_protocol = "HTTP"
    lb_port           = 80
    lb_protocol       = "HTTP"
  }

  # Optionally, you can add additional listener blocks for HTTPS listeners if needed
}
